.container {
  padding: 20px;
  background: #f5f5f5;
}

.tools-list {
  background: #fff;
  border-radius: 15px;
  padding: 10px;
}

.tool-item {
  display: flex;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #f0f0f0;
}

.tool-info {
  flex: 1;
}

.tool-name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.tool-desc {
  font-size: 12px;
  color: #666;
} 