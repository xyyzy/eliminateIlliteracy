.container {
  padding: 20px;
  background: #f5f5f5;
  min-height: 100vh;
}

.tools-list {
  background: #fff;
  border-radius: 15px;
  padding: 10px;
  margin-bottom: 20px;
}

.tool-item {
  display: flex;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #f0f0f0;
}

.tool-info {
  flex: 1;
}

.tool-name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
  display: block;
}

.tool-desc {
  font-size: 12px;
  color: #666;
  display: block;
}

/* 翻译部分样式 */
.translation-section {
  background: #fff;
  border-radius: 15px;
  padding: 20px;
}

.translation-header {
  margin-bottom: 20px;
}

.section-title {
  font-size: 20px;
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
}

.section-desc {
  font-size: 14px;
  color: #666;
}

.translation-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-display {
  width: 100%;
  min-height: 100px;
  background: #f9f9f9;
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 20px;
}

.result-text {
  font-size: 16px;
  color: #333;
  line-height: 1.5;
}

.translation-controls {
  width: 100%;
  display: flex;
  justify-content: center;
}

.translate-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #4CAF50;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  transition: all 0.3s;
}

.translate-btn.recording {
  background: #f44336;
  transform: scale(1.1);
} 