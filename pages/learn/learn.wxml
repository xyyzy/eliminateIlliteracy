<view class="container">
  <view class="title">常用汉字</view>
  
  <view class="character-grid">
    <view class="character-item" 
          wx:for="{{commonCharacters}}" 
          wx:key="char">
      <view class="character-content">
        <text class="character">{{item.char}}</text>
        <text class="pinyin">{{item.pinyin}}</text>
        <text class="meaning">{{item.meaning}}</text>
      </view>
      <button class="audio-btn"
              bindtouchstart="startRecord"
              data-index="{{index}}"
              hover-class="button-hover">
        {{recording ? '录音中...' : '按住说话'}}
      </button>
    </view>
  </view>
</view> 